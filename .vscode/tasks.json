{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Home Assistant",
      "type": "shell",
      "command": "scripts/develop",
      "problemMatcher": []
    },
    {
      "label": "Flake8",
      "type": "shell",
      "command": "pre-commit run flake8 custom_components/schluter",
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Pylint",
      "type": "shell",
      "command": "pylint --min-similarity-lines=7 custom_components/schluter",
      "dependsOn": [
        "Install all Requirements"
      ],
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Install all Requirements",
      "type": "shell",
      "command": "pip3 install --use-deprecated=legacy-resolver -r requirements.txt -r requirements_test.txt",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Isort",
      "type": "shell",
      "command": "isort --line-width 88 --trailing-comma -m 3 --profile black .",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Pylint",
      "type": "shell",
      "command": "pylint custom_components tests",
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Pytest",
      "type": "shell",
      "command": "pytest",
      "group": {
        "kind": "test",
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Flake8",
      "type": "shell",
      "command": "flake8 --max-line-length 88 .",
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
  ]
}